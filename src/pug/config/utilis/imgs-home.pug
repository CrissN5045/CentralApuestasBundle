mixin pushImgsHome()
	div(class='ed-grid m-grid-1 lg-grid-1 ')
		div(class="ed-grid m-grid-4 s-grid-1 rows-gap gap-2")
			-for(var i = 0; i < imgs_home.length; i++)
				-var img= imgs_home[i].img 
				-var text_title= imgs_home[i].title 
				-var text_class= imgs_home[i].class
				-var img_url= imgs_home[i].url 
				+pushImg(img, text_class, text_title,img_url)

mixin pushImg(img, text_class, text_title,img_url)
	div(class=text_class, class="container-main-img"): a(href=img_url)
		img(class="images-main" src=img, alt=text_title, width="100%", height="100%")
		div(class="container-btn")
			button(class="btn") APUESTA AHORA
	
	
+pushImgsHome()
