mixin selectpais()
	select(id="pais")
		-for(var i = 0; i < countries.length; i++)
			-var name_es=countries[i].name_es 
			-var dial_code=countries[i].dial_code 
			+optionpais(name_es,dial_code)

mixin optionpais(name_es,dial_code)
	option(value=dial_code maxlength="10")=name_es+" "+dial_code
	
+selectpais()
